pkgname=py3-zope-configuration
_pyname=zope.configuration
pkgver=4.3.1
pkgrel=0
pkgdesc="Zope Configuration Markup Language"
url="http://pypi.python.org/pypi/zope.configuration"
arch="noarch"
license="ZPL-2.1"
depends="python3 py3-zope-schema py3-zope-interface py3-six py3-zope-i18nmessageid"
checkdepends="py3-zope-schema py3-zope-testing py3-zope-testrunner py3-manuel"
makedepends="py3-setuptools python3-dev"
_pypiprefix="${_pyname%${_pyname#?}}"
source="https://files.pythonhosted.org/packages/source/$_pypiprefix/$_pyname/$_pyname-$pkgver.tar.gz"
builddir="$srcdir/$_pyname-$pkgver"
replaces="py-zope-configuration"
provides="py-zope-configuration=$pkgver-r$pkgrel"

build() {
	python3 setup.py build
}

check() {
	python3 setup.py test
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

