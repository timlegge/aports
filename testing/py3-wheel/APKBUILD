# Contributor: Drew DeVault <sir@cmpwn.com>
# Maintainer: Drew DeVault <sir@cmpwn.com>
pkgname=py3-wheel
_pyname=wheel
pkgver=0.33.4
pkgrel=0
pkgdesc="A built-package format for Python"
url="https://github.com/pypa/wheel"
arch="noarch"
license="MIT"
depends="python3"
checkdepends="py3-pytest py3-pytest-cov"
makedepends="py3-setuptools"
_pypiprefix="${_pyname%${_pyname#?}}"
# TODO: Switch to PyPI: https://github.com/pypa/wheel/issues/299
source="$pkgname-$pkgver.tar.gz::https://github.com/pypa/wheel/archive/$pkgver.tar.gz"
builddir="$srcdir"/$_pyname-$pkgver

build() {
	python3 setup.py build
}

check() {
	PYTHONPATH="$PWD" pytest-3
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="00c2994fd4688d5f93634d27e2d1838034b8bc56ae2075e9500eae1babd8bd837272941834e376c7a7afef47655fb9828c12f0ccbe62d0397f8482fe876e6f8b  py3-wheel-0.33.4.tar.gz"
